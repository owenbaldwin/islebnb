<div class="navbar navbar-expand-sm navbar-light navbar-lewagon border-bottom shadow p-3 mb-5 bg-white rounded">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%# <%= image_tag "../../../public/logo-islebnb.png" %>
    <%= image_tag "logo-islebnb.png", class: "logo-image" %>

  <% end %>

  <div>
    <div class="searchbar" >
      <div class="search-field">
        <%= form_tag islands_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find an island"
            %>
      </div>
      <div class="search-input">
          <button name="button" type="submit" class="search">
          <i class="fas fa-search icon"></i> Search
          </button>
      </div>
      <% end %>
    </div>
  </div>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Become a host", new_island_path, class: "nav-link" %>
        </li>
        <li class="nav-item profile">
          <%= link_to "Profile", user_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "stevei.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
