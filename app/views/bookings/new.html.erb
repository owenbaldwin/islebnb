<div class="background">
  <div class="center">
    <h2> Create Booking </h2>
    <%= simple_form_for [ @island, @booking ] do |f| %>
      <div class ="booking-form">
        <div class="form-inputs">
          <h3>Arrival</h3>
          <%= f.input :start_date %>
          <h3>Departure</h3>
          <%= f.input :end_date %>
        </div>

        <div class="form-actions">
            <%= f.button :submit, "Submit booking", class: "btn-book" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
