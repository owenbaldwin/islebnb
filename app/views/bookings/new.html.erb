<div class="background">
  <div class="center">
    <h2> Book your stay in the wonderful <br> ✨<strong><%= @island.name %></strong>✨ island </h2>
    <h3>How long are you planning to stay ? </h3>
    <%= simple_form_for [ @island, @booking ] do |f| %>
      <div class ="booking-form">
        <div class="form-inputs">
          <%= f.input :start_date, label: "Check-in"%>
          <%= f.input :end_date, label: "Check-out"%>
        </div>

        <div class="form-actions">
            <%= f.button :submit, "Submit booking", class: "btn-book" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
