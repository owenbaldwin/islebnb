<div class="showbg">
  <div>
    <div class="island-name">
      <h1> <%= @island.name %> Island 🏝</h1>
    </div>
    <div class="surrounding-grid">
      <div class="grid">

          <div class="item large">
            <% if @island.photo.attached? %>
              <%= cl_image_tag @island.photo.key, height: 300, width: 400, crop: :fill %>
            <% else %>
              <img class="stock-photo" src="https://cdn.britannica.com/15/162615-131-0CBB2CBE/island-Caribbean.jpg" >
            <% end %>
          </div>
          <div class="item">
            <img class="stock-photo" src="https://cdn.britannica.com/15/162615-131-0CBB2CBE/island-Caribbean.jpg" >
          </div>
          <div class="item">
            <img class="stock-photo" src="https://cdn.britannica.com/15/162615-131-0CBB2CBE/island-Caribbean.jpg" >
          </div>
          <div class="item">
            <img class="stock-photo" src="https://cdn.britannica.com/15/162615-131-0CBB2CBE/island-Caribbean.jpg" >
          </div>
          <div class="item">
            <img class="stock-photo" src="https://cdn.britannica.com/15/162615-131-0CBB2CBE/island-Caribbean.jpg" >
          </div>
      </div>

      <div class="row show-bottom">
        <div class="col-6 show-box-1">
          <div>
            <div class="item xlarge location">
              <h5><%= @island.description %> ⛱ </h5>
              <p> <strong> 📍 Location: </strong> <%= @island.location %></p>
              <p> <strong> 📆 Available from: </strong><%= @island.availability %></p>
              <p> <strong> 📞 Contact: </strong> <%=  @island.user.email %></p>
              <p> 💰 <strong> Price/night: </strong> <%= @island.price %></p>
            </div>
            <div class="book price">

            </div>
            <div class="show-page-buttons">
              <div class="book">
                <%= link_to 'Back', islands_path, class: "btn-white" %>
              </div>
              <div class="book">
                <%= link_to 'Book this island!', new_island_booking_path(@island), class: "btn-blue" %>
              </div>
            </div>
            <div class="tandc">
            <p> <em> Terms and conditions may apply. No refund in case of bad weather, volcanic eruption or big, tropical mosquito bites! </em></p>
            </div>
          </div>
        </div>
        <div class="col-6 show-box-2">

          <div style="width: 100%; height: 720px;"
            data-controller="mapbox"
            data-mapbox-markers-value="<%= @markers.to_json %>"
            data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
