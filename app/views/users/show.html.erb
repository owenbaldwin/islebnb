<div class="profile-background-image">
  <div class="page-title">
    <h2><%= @user.first_name %> <%= @user.last_name %>
    </h2>
  </div>
  <br>

  <div class="container">
    <div class="row">
      <div class="col-6" >
        <div class="mybookings-heading">
          <h3> My Bookings</h3>
        </div>
          <div class="container-bookings-inner cards ">
            <% @bookings.each do |booking| %>
              <div class="card-trip-small rounded" class="col-6">
                <%= cl_image_tag booking.island.photo.key, height: 300, width: 400, crop: :fill %>
                <div class="card-trip-infos">
                  <div class="booking-card-name">
                    <p><%= booking.island.name %></p>
                  </div>
                  <div>
                    <p><%= booking.start_date  %></p>
                    <p><%= booking.end_date %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

        <h3>My Islands</h3>
        <div class="container-bookings-inner cards">
          <% @islands.each do |island| %>
            <div class="card-trip-small rounded" class="col-6">
              <%= cl_image_tag island.photo.key, height: 300, width: 400, crop: :fill %>
              <div class="card-trip-infos">
                <div class="booking-card-name">
                  <p><%= island.name  %></p>
                </div>
                <div>
                  <p><%= island.location %></p>
                  <p><%= island.description %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
