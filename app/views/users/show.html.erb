<div class="page-title">
  <h2><%= @user.first_name %> <%= @user.last_name %>
  </h2>
</div>
<br>

<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="container cards">
          <h3>My Islands</h3>
          <% @islands.each do |island| %>
          <div class="card-trip" class="col-6">
            <%= island.name  %> <br>
            <%= island.location %> <br>
            <%= island.description %> <br>
            <%= cl_image_tag island.photo.key, height: 300, width: 400, crop: :fill %>
          </div>
          <% end %>

        <div>
          <br>
          <h3>My Bookings</h3>
          <% @bookings.each do |booking| %>
          <div>
            <%= booking.island.name %> <br>
            <%= booking.start_date %> <br>
            <%= booking.end_date %> <br>


          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
